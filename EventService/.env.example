# Event Service environment example
APP_NAME=Event Service
APP_DESCRIPTION=Event lifecycle management, discovery, and analytics.
APP_VERSION=0.1.0

# CORS
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Security
# INTERNAL_API_KEY=replace-with-random-secret
API_KEY_HEADER_NAME=x-api-key

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Feature flags
ENABLE_ADMIN_ANALYTICS=true

# External service URLs (optional; reserved for future integration)
# USER_SERVICE_BASE_URL=http://userservice:8000
# BOOKING_SERVICE_BASE_URL=http://bookingservice:8000
